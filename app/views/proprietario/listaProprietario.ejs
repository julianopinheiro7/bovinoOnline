<html>

<head>
    <link href="css/materialize.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="js/jquery-2.2.1.js"></script>
    <script src="js/jquery.mask.js"/></script>

    <script type="text/javascript">
        $(document).ready(function() {	
            $(".cpf").mask("999.999.999-99");
            $(".celular").mask("99999-9999");
        });
    </script>

</head>

<body>

    <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">
                <img id="imgLogo" src="img/logo.png">
            </a>
            <ul class="right hide-on-med-and-down">
                <li>
                    <a href="listaBovino" class="btn-flat"><img id="logoCow" src="img/cow.png">Bovinos</a>
                    <a href="listaProprietario" class="btn-flat"><img id="logoProp" src="img/proprietario.png">Proprietários</a>
                </li>
            </ul>
            <div style="padding: 15px; margin-left: 220px;">
                <a class="waves-effect waves-light btn-flat" href="cadastraProprietario">
                    </i>Cadastrar</a>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 25px;">

        <%if(sucess == 'T') {%>
            <div class="card-panel teal lighten-3 center">
                <b class="white-text">Registro excluído com sucesso!</b>
            </div>
        <% } %>
        <%if(sucess == 'F') {%>
            <div class="card-panel red lighten-1 center">
                <b class="white-text">Ocorreu um erro ao excluir, tente novamente!</b>
            </div>
        <% } %>
        <%if(sucess == 'B') {%>
            <div class="card-panel red lighten-1 center">
                <b class="white-text">Não é possível excluir um proprietário que tem bovinos cadastrados!</b>
            </div>
        <% } %>

        <h5>
            <b>Lista de Proprietários</b>
        </h5>

        <table class="striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>DDD</th>
                    <th>Celular</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th>Endereço</th>
                    <th>Editar</th>
                    <th>Excluir</th>
                </tr>
            </thead>

            <tbody>
                <% if (proprietarios.length > 0) {%>
                    <% for(var i = 0; i < proprietarios.length; i++) {%>
                        <tr>
                            <td>
                                <%=proprietarios[i].id_proprietario%>
                            </td>
                            <td>
                                <%=proprietarios[i].nome%>
                            </td>
                            <td>
                                <span class="cpf"><%=proprietarios[i].cpf%></span>
                            </td>
                            <td>
                                (<%=proprietarios[i].ddd%>)
                            </td>
                            <td>
                                <span class="celular"><%=proprietarios[i].celular%></span>                               
                            </td>
                            <td>
                                <%=proprietarios[i].cidade%>
                            </td>
                            <td>
                                <%=proprietarios[i].estado%>
                            </td>
                            <td>
                                <%=proprietarios[i].endereco%>
                            </td>
                            <td>
                                <a class="btn-flat waves-effect waves-light edit" href="cadastraProprietario?id=<%=proprietarios[i].id_proprietario%>" style="padding: 0px 1rem;">
                                    <i class="material-icons">edit</i>
                                </a>
                            </td>
                            <td>
                                <a class="btn-flat waves-effect waves-light delete" href="excluiProprietario?id=<%=proprietarios[i].id_proprietario%>" style="padding: 0px 1rem;">
                                    <i class="material-icons">delete</i>
                                </a>
                            </td>
                        </tr>
                        <% } %>
                            <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>